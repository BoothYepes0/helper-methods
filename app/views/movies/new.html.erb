<h1>New movie</h1>

<% @movies.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>

<hr>

<%= form_with(model: @movies) do |form| %>
  <div>
    <%= form.label :title %>

    <%= form.text_field :title %>

  </div>

  <div>
    <%= form.label :description %>

    <%= form.text_area :description, rows: 3 %>

  <%= form.button  %>
  
<% end %>

